<div class="text-center">
	<div class="row">
		<div class="col-xs-12">
			<p class="text-center question-header">Frage {{ counter }}/{{ model.length }}</p>
		</div>
		<div class="col-xs-12" >
			<div class="text-center questions">
		        <div class="question">
		            <p>{{ question.text }}</p>
		        </div>
			</div>
		</div>
		<div class="col-xs-12" >
			<div class="btn-group btn-group-justified" role="group">
				<a href="#" class="btn btn-default" role="button" {{ action 'answerQuestion' true }}>Wahr</a>
	  			<a href="#" class="btn btn-default" role="button" {{ action 'answerQuestion' false }}>Falsch</a>
	    </div>
    </div>
	</div><!-- /.row -->
</div>
