<div class="text-center">
	<div class="row">
		<div class="col-xs-12">
			<p class="question-header">Frage {{ counter }}/{{ model.length }}</p>
		</div>
		<div class="col-xs-12" >
      <div class="question-text">
          <p>{{ question.text }}</p>
      </div>
		</div>
		<div class="col-xs-12" >
			<div class="btn-group btn-group-justified answers" role="group">
				<a href="#" class="btn btn-lg btn-default" role="button" {{ action 'answerQuestion' true }}>
          <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
        </a>
  			<a href="#" class="btn btn-lg btn-default" role="button" {{ action 'answerQuestion' false }}>
          <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
        </a>
	    </div>
    </div>
	</div><!-- /.row -->
</div>
